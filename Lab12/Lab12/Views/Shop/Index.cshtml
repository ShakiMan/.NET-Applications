@model dynamic
@{
    ViewData["Title"] = "Shop";
}


<div class="container">

    <div class="row">

        <div class="col-lg-3">

            <div class="list-group">
                @foreach (var item in Model.Categories)
                {
                    <a class="list-group-item" asp-action="Index" asp-route-id="@item.CategoryId">@item.Name</a>
                }
            </div>

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

            <div class="row">
                @foreach (var item in Model.Articles)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            @if (Model.isWithId == true)
                            {
                                <img class="card-img-top" src="../../@item.Image" alt="">
                            }
                            else
                            {
                                <img class="card-img-top" src="../@item.Image" alt="">
                            }

                            <div class="card-body">
                                <h5>@item.Price zł</h5>
                                <h3 class="card-title">
                                    @item.Name
                                </h3>
                                
                            </div>
                        </div>
                    </div>
                }


            </div>
            <!-- /.row -->

        </div>
    </div>
</div>
